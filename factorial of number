import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        if (sc.hasNextInt()) {
            int n = sc.nextInt();
            long factorial = 1; 
            
            
            for (int i = 1; i <= n; i++) {
                factorial *= i;
            }
            
            
            System.out.println(factorial);
        }
        
        sc.close();
    }
}
